
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@model LoginUserVM
<link rel="stylesheet" href="~/admin/css/style.css">

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="UsernameorEmail">UsernameorEmail</label>
                    <input asp-for="UsernameorEmail" type="text" class="form-control" placeholder="Username or Email">
                    <span asp-validation-for="UsernameorEmail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="IsPersistance">Remember me</label>
                    <input asp-for="IsPersistance" class="form-checkbox">
                    <span asp-validation-for="IsPersistance"></span>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary me-2">Login</button>
                <button class="btn btn-light" asp-action="Index" asp-controller="Home">Cancel</button>
            </form>
        </div>
    </div>
</div>